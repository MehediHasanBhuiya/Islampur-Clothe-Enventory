
@{
    ViewData["Title"] = "Sale";
}

<h2>Sale</h2>

<div ng-controller="Sales">
    <div class="jumbotron" style="padding:7px; margin-bottom:0;">
        <div class="container">
            <div class="row">

                <div class="col-md-2 ">
                    <div class="form-group search">

                        <label class="control-label">Product Name</label>
                        <input type="text" class="form-control" ng-model="ProductName" ng-keyup="searchProduct()" />

                        <ul class="list-group search-ui" ng-model="hidethisProduct" ng-hide="hidethisProduct">
                            <li class="list-group-item search-li" ng-repeat="p in productList" ng-click="FillTextBoxProduct(p)">{{p.productName}}</li>
                        </ul>
                        <label ng-model="productId" ng-hide="true"></label>

                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">

                        <label class="control-label">Per Item Price</label>
                        <input type="text" class="form-control" ng-model="ProductPrice" />

                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">

                        <label class="control-label">Quentity</label>
                        <input type="text" class="form-control" ng-model="SaleQuentity" ng-keyup="tprice()" />

                    </div>
                </div>

                <div class="col-md-2 ">
                    <div class="form-group">

                        <label class="control-label">Total Price</label>
                        <input type="text" class="form-control" ng-model="SalePrice" />



                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">

                        <label class="control-label">OnCash</label>
                        <input type="text" class="form-control" ng-model="OnCash" ng-keyup="cash()" />

                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">

                        <label class="control-label">OnDebt</label>
                        <input type="text" class="form-control" ng-model="OnDebt" ng-disabled="true" />

                    </div>
                </div>
                <div class="col-md-2 ">
                    <div class="form-group search">

                        <label class="control-label">Customer Name</label>
                        <input type="text" class="form-control" ng-model="CustomerName" ng-keyup="searchCusomer()" />

                        <ul class="list-group search-ui" ng-model="hidethisCustomer" ng-hide="hidethisCustomer">
                            <li class="list-group-item search-li" ng-repeat="p in customerList" ng-click="FillTextBoxCustomer(p)">{{p.customerName}}</li>
                        </ul>
                        <label ng-model="customerId" ng-hide="true"></label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">

                        <label class="control-label">Address</label>
                        <input type="text" class="form-control" ng-model="CustomerAddress" placeholder="Customer Address" />

                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">

                        <label class="control-label">Phone Number</label>
                        <input type="text" class="form-control" ng-model="CustomerPhoneNumber" placeholder="Customer Phone Number" />

                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group">

                        <label class="control-label">Email</label>
                        <input type="text" class="form-control" ng-model="CustomerEmail" placeholder="Customer Email" />

                    </div>
                </div>

                <div class="col-md-2">
                    <div class="form-group">
                        <br />
                        <input type="button" class="btn btn-success" value="Add" ng-click="AddSale()" />

                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="col-md-6" style="padding:10px;">
        <div class="form-group">
            <div class="col-md-3"><label class="control-label text-right ">Search : </label></div>
            <div class="col-md-9"><input type="text" class="form-control" placeholder="Search.." ng-model="search" /></div>
        </div>
    </div>
    
    <br />
    <br />

    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="bg-success">
                    <tr>
                        <th>Customer Name</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Product Name</th>
                        <th>Product Quentity</th>
                        <th>Sale Price</th>
                        <th>OnCash</th>
                        <th>OnDebt</th>
                        <th>Time</th>
                    </tr>
                </thead>

                <tbody>

                    <tr dir-paginate="sale in saleinfo | filter:search|itemsPerPage:5">

                        <td>
                            <span>{{sale.customers.customerName}}</span>
                        </td>

                        <td>
                            <span>{{sale.customers.customerAddress}}</span>
                        </td>

                        <td>
                            <span>{{sale.customers.customerEmail}}</span>
                        </td>

                        <td>
                            <span>{{sale.customers.customerPhoneNumber}}</span>
                        </td>

                        <td>
                            <span>{{sale.products.productName}}</span>
                        </td>

                        <td>
                            <span>{{sale.saleQuentity}}</span>
                        </td>

                        <td>
                            <span>{{sale.salePrice}}</span>
                        </td>

                        <td>
                            <span>{{sale.onCash}}</span>
                        </td>

                        <td>
                            <span>{{sale.onDebt}}</span>
                        </td>

                        <td>
                            <span>{{sale.saleTime | date:'yyyy-MM-dd hh:mm'}}</span>
                        </td>
                    </tr>
                </tbody>

            </table>
            <dir-pagination-controls max-size="5"
                                     direction-links="true"
                                     boundary-links="true">
            </dir-pagination-controls>
        </div>
    </div>
</div>

